/* miniprogram/pages/upload/upload.wxss */
page{
  background-color: rgba(200, 198, 201, 0.527);
}
/* 占用页面 */
.pages{
  width: 98%;
  margin: auto;
  overflow: hidden;
}
/* 图片 */
.images_box{
  width: 100%;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: flex-start;
  background-color: white;
}
/* 照片 */
.img-box{
  border: 5rpx;
  border-style: solid;
  border-color: rgba(0, 0, 0, 0.452);
  width: 200rpx;
  height: 200rpx;
  margin-left: 35rpx;
  margin-top: 30rpx;
  margin-bottom: 30rpx;
  position: relative;
}
/* 删除 */
.img-delect{
  width:50rpx;
  height:50rpx;
  border-radius:50%;
  position:absolute;
  right:-20rpx;
  top:-20rpx;
}
.img{
  width: 100%;
  height: 100%;
}
/* 地点 */
.position{
  width: 100%;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: flex-start;
  background-color: white;
  font-size: 8px;
}

/* 文字 */
.text_area{
  width: 100%;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: flex-start;
  background-color: white;
  margin:20px 0px 0px 0px;
}

/* 按钮 */
button{
  margin-top: 20rpx;
  background-color: green;
}